<atlassian-plugin key="${project.groupId}.${project.artifactId}" name="${project.name}" plugins-version="2">
    <plugin-info>
        <description>${project.description}</description>
        <version>${project.version}</version>
        <vendor name="${project.organization.name}" url="${project.organization.url}"/>
    </plugin-info>
    <component-import key="eventPublisher" interface="com.atlassian.event.api.EventPublisher"/>

    <component-import key="applicationProperties" interface="com.atlassian.sal.api.ApplicationProperties"/>
    <component-import key="threadLocalContextManager"
                      interface="com.atlassian.sal.api.executor.ThreadLocalContextManager"/>

    <component key="httpClient"
               class="com.atlassian.httpclient.plugin.HttpClientFactoryWrapper"
               public="true">
        <interface>com.atlassian.httpclient.api.HttpClient</interface>
    </component>

    <component key="httpClientFactory" class="com.atlassian.httpclient.apache.httpcomponents.DefaultHttpClientFactory"
               public="true">
        <interface>com.atlassian.httpclient.api.factory.HttpClientFactory</interface>
    </component>

</atlassian-plugin>